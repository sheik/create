
image = "builder:1"
exec = "docker --rm -v $PWD:/code run"

build_container {
    command = "docker build . --tag $image"
    check = output("docker images -q $image")
    complete = docker_image_exists($image)
}

build {
    build_container
    command = "$exec go build ./..."
}

package {
    build
    command = `
        $exec fpm \
            --vendor Create \
            usr
    `
}
